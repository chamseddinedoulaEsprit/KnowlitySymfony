{% extends 'base.html.twig' %}

{% block title %}🛠 Modifier votre Résultat{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark text-center">
            <h2 class="fw-bold">✏ Améliorez votre Résultat</h2>
            <p class="mb-0">Chaque mise à jour est une nouvelle opportunité de progresser ! 🚀</p>
        </div>
        <div class="card-body">
            {{ include('resultat/_form.html.twig', {'button_label': '💾 Mettre à Jour'}) }}

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_resultat_index') }}" class="btn btn-outline-secondary">
                    ⬅ Retour à la liste
                </a>

                {{ include('resultat/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}