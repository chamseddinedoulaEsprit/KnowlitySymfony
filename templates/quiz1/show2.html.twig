{% extends 'base.html.twig' %}

{% block title %}Quiz: {{ quiz.titre }}{% endblock %}

{% block body %}
<div class="container">
    <h2>{{ quiz.titre }}</h2>

    {% if quiz.questions is empty %}
        <p class="text-danger">Aucune question disponible pour ce quiz.</p>
    {% else %}
        <form method="post" action="{{ path('quiz_submit', {'id': quiz.id}) }}">
            {% for question in quiz.questions %}
                <div class="mb-3 question-container" id="question-{{ question.id }}" {% if not loop.first %}style="display: none;"{% endif %}>
                    <h4 class="form-label">Question {{ loop.index }}</h4>
                    <p>{{ question.texte }}</p>

                    {# Debugging: Check if responses exist #}
                    {% if question.reponses is empty %}
                        <p class="text-danger">Aucune réponse disponible pour la question : {{ question.texte }} (ID: {{ question.id }})</p>
                    {% else %}
                        {# Afficher les réponses selon le type de question #}
                        {% if question.type == 'text' %}
                            <div class="form-group">
                                <input type="text" name="responses[{{ question.id }}]" class="form-control" placeholder="Votre réponse ici" required>
                            </div>
                        {% elseif question.type == 'single_choice' %}
                            <div class="form-group">
                                {% for response in question.reponses %}
                                    <div class="form-check">
                                        <input type="radio" id="response_{{ response.id }}" name="responses[{{ question.id }}]" value="{{ response.id }}" class="form-check-input" required>
                                        <label for="response_{{ response.id }}" class="form-check-label">{{ response.texte }}</label>
                                    </div>
                                {% endfor %}
                            </div>
                        {% elseif question.type == 'multiple_choice' %}
                            <div class="form-group">
                                {% for response in question.reponses %}
                                    <div class="form-check">
                                        <input type="checkbox" id="response_{{ response.id }}" name="responses[{{ question.id }}][]" value="{{ response.id }}" class="form-check-input">
                                        <label for="response_{{ response.id }}" class="form-check-label">{{ response.texte }}</label>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    {% endif %}

                    {# Boutons de navigation #}
                    <div class="mt-3">
                        {% if not loop.last %}
                            <button type="button" class="btn btn-primary next-question" data-next="question-{{ quiz.questions[loop.index].id }}">Next Question</button>
                        {% else %}
                            <button type="submit" class="btn btn-success">Submit Quiz</button>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </form>
    {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const nextButtons = document.querySelectorAll('.next-question');

    nextButtons.forEach(button => {
        button.addEventListener('click', function () {
            const currentQuestion = this.closest('.question-container');
            const nextQuestionId = this.getAttribute('data-next');
            const nextQuestion = document.getElementById(nextQuestionId);

            if (currentQuestion) {
                currentQuestion.style.display = 'none';
            }

            if (nextQuestion) {
                nextQuestion.style.display = 'block';
            } else {
                console.error('Question suivante non trouvée : ', nextQuestionId);
            }
        });
    });

    const form = document.querySelector('form');
    form.addEventListener('submit', function (e) {
        const visibleQuestion = document.querySelector('.question-container:not([style*="display: none"])');
        if (visibleQuestion) {
            const inputs = visibleQuestion.querySelectorAll('input[required]');
            let isValid = true;
            inputs.forEach(input => {
                if (!input.checked && input.type === 'radio') {
                    isValid = false;
                }
            });
            if (!isValid) {
                e.preventDefault();
                alert('Veuillez sélectionner une réponse avant de soumettre.');
            }
        }
    });
});
</script>
{% endblock %}