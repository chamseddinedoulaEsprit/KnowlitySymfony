{% extends 'base2.html.twig' %}

{% block title %}Quiz Index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Quiz Index</h1>

        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">TITRE</th>
                    <th scope="col">DESCRIPTION</th>
                    <th scope="col">SCORE MAX</th>
                    <th scope="col">DATE LIMIT</th>
                    <th scope="col">ACTIONS</th>
                </tr>
            </thead>
            <tbody>
            {% for quiz in quizzes %}
                <tr>
                    <td>{{ quiz.id }}</td>
                    <td>{{ quiz.titre }}</td>
                    <td>{{ quiz.description }}</td>
                    <td>{{ quiz.scoreMax }}</td>
                    <td>{{ quiz.dateLimite ? quiz.dateLimite|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_quiz_show', {'id': quiz.id}) }}" class="btn btn-primary btn-sm">Show</a>
                        <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="btn btn-success btn-sm">Edit</a>
{% if app.request.get('_route') is defined %}
    <a href="{{ path('quiz_show2', {'id': quiz.id}) }}" class="btn btn-info btn-sm">Take Quiz</a>
{% else %}
    <p>Route quiz_show2 not found</p>
{% endif %}


                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_quiz_new') }}" class="btn btn-info">Create new</a>
    </div>
{% endblock %}