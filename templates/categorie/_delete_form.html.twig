<form method="post" action="{{ path('app_categorie_delete', {'id': categorie.id}) }}" onsubmit="showDeleteModal(event)">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
<div id="deleteConfirmationModal" class="custom-modal">
    <div class="modal-content">
        <p>Êtes-vous sûr de vouloir supprimer cet élément ?</p>
        <div class="modal-buttons">
            <button onclick="confirmDelete()" class="btn btn-danger">Confirmer</button>
            <button onclick="cancelDelete()" class="btn btn-secondary">Annuler</button>
        </div>
    </div>
</div>

<style>
.custom-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    justify-content: center;
    align-items: center;
    z-index: 1000;
}

.modal-content {
    background-color: white;
    padding: 20px;
    border-radius: 5px;
    text-align: center;
    box-shadow: 0 0 10px rgba(0,0,0,0.3);
}

.modal-buttons {
    margin-top: 15px;
    display: flex;
    gap: 10px;
    justify-content: center;
}
</style>

<script>
let deleteForm = null;

function showDeleteModal(event) {
    event.preventDefault();
    deleteForm = event.target;
    document.getElementById('deleteConfirmationModal').style.display = 'flex';
}

function confirmDelete() {
    if(deleteForm) {
        deleteForm.submit();
    }
    hideModal();
}

function cancelDelete() {
    hideModal();
}

function hideModal() {
    document.getElementById('deleteConfirmationModal').style.display = 'none';
    deleteForm = null;
}
</script>