{% block title %}Créer une nouvelle catégorie{% endblock %}

{% block body %}
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Catégorie</h3>
        </div>
        
        {{ form_start(form) }}
        <div class="card-body">
            <!-- Nom de la catégorie -->
            <div class="form-group">
                {{ form_label(form.name, 'Nom de la catégorie') }}
                {{ form_widget(form.name, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Entrez le nom de la catégorie'
                    }
                }) }}
                {{ form_errors(form.name) }}
            </div>

            <!-- Mots-clés -->
            <div class="form-group">
                {{ form_label(form.mots_cles, 'Mots-clés') }}
                {{ form_widget(form.mots_cles, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Séparez les mots-clés par des virgules'
                    }
                }) }}
                {{ form_errors(form.mots_cles) }}
            </div>

            <!-- Public cible -->
            <div class="form-group">
                {{ form_label(form.public_cible, 'Public cible') }}
                {{ form_widget(form.public_cible, {
                    'attr': {
                        'class': 'form-select'
                    }
                }) }}
                {{ form_errors(form.public_cible) }}
            </div>

            <!-- Description -->
            <div class="form-group">
                {{ form_label(form.descrption, 'Description') }}
                {{ form_widget(form.descrption, {
                    'attr': {
                        'class': 'form-control',
                        'rows': 4,
                        'placeholder': 'Décrivez la catégorie'
                    }
                }) }}
                {{ form_errors(form.descrption) }}
            </div>

            <!-- Fichier à uploader -->
            <div class="form-group">
                {{ form_label(form.brochure, 'Fichier à uploader') }}
                {{ form_widget(form.brochure, {
                    'attr': {
                        'class': 'form-control'
                    }
                }) }}
                {{ form_errors(form.brochure) }}
                <small class="form-text text-muted">Formats acceptés : PDF, DOC, DOCX, JPEG, PNG (max 2Mo)</small>
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>{{ button_label|default('Enregistrer') }}
            </button>
        </div>
        {{ form_end(form) }}
    </div>

    <style>
        .form-select {
            background-position: right 0.75rem center;
        }
        
        .form-control[type="file"] {
            padding: 0.375rem 0.75rem;
        }
        
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
    </style>
{% endblock %}