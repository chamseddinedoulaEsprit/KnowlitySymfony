{% extends 'base2.html.twig' %}

{% block title %}Edit Quiz Question{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {# Question Fields #}
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Question Details</h5>
            </div>
            <div class="card-body">
                <div class="form-group">
                    {{ form_label(form.type, 'Question Type', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.points, 'Points', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.points, {'attr': {'class': 'form-control form-control-border'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.texte, 'Question Text', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.texte, {'attr': {'class': 'form-control form-control-border'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.ordre, 'Order', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.ordre, {'attr': {'class': 'form-control form-control-border'}}) }}
                </div>
            </div>
        </div>

        {# Responses Section #}
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Responses</h5>
            </div>
            <div class="card-body">
                {% for response in form.reponses %}
                    <div class="form-group mb-3">
                        {{ form_label(response.texte, 'Response Text', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(response.texte, {'attr': {'class': 'form-control form-control-border', 'placeholder': 'Enter response text'}}) }}
                    </div>
                    <div class="form-group mb-4">
                        <div class="form-check">
                            {{ form_widget(response.estCorrecte, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(response.estCorrecte, 'Is Correct', {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                    </div>
                    <hr class="my-4">
                {% endfor %}
            </div>
        </div>

        {# Buttons #}
        <div class="form-group">
            <button type="submit" name="save" class="btn btn-primary">Save</button>
            <button type="submit" name="add_another" class="btn btn-secondary">Add Another Question</button>
        </div>

    {{ form_end(form) }}
{% endblock %}
