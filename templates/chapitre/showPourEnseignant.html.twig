{% extends 'base3.html.twig' %}

{% block title %}Chapitre - {{ chapitre.title }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow-lg">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">{{ chapitre.title }}</h1>
            <span class="badge bg-primary">Chapitre #{{ chapitre.chapOrder }}</span>
        </div>

        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="info-item">
                        <h5 class="text-muted mb-3">Détails du chapitre</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Titre</dt>
                            <dd class="col-sm-8">{{ chapitre.title }}</dd>

                            <dt class="col-sm-4">Ordre</dt>
                            <dd class="col-sm-8">{{ chapitre.chapOrder }}</dd>
                        </dl>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="pdf-preview">
                        <h5 class="text-muted mb-3">Contenu</h5>
                        <div class="border rounded-3 p-3 bg-light">
                            <div class="d-flex align-items-center gap-3">
                                <a href="{{ asset('uploads/brochures/' ~ chapitre.contenu) }}" 
                                   class="btn btn-primary d-flex align-items-center"
                                   target="_blank"
                                   download>
                                    <i class="fas fa-file-pdf me-2"></i>
                                    Télécharger PDF
                                </a>
                                <a href="{{ asset('uploads/brochures/' ~ chapitre.contenu) }}" 
                                   class="btn btn-outline-secondary"
                                   target="_blank">
                                    <i class="fas fa-external-link-alt me-2"></i>
                                    Ouvrir
                                </a>
                            </div>
                            <iframe src="{{ asset('uploads/brochures/' ~ chapitre.contenu) }}#toolbar=0" 
                                    class="w-100 mt-3"
                                    style="height: 300px; border: none;"
                                    title="Aperçu PDF">
                            </iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light d-flex justify-content-between">
            <a href="{{ path('app_cours', {'id': chapitre.cours.id}) }}"
               class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Retour au cours
            </a>

            <div class="d-flex gap-2">
                <a href="{{ path('app_chapitre_edit', {'id': chapitre.id}) }}" 
                   class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>
                    Modifier
                </a>
                
                <div class="delete-form">
                    {{ include('chapitre/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .pdf-preview {
        transition: transform 0.2s ease;
    }
    
    .pdf-preview:hover {
        transform: translateY(-2px);
    }
    
    .info-item dt {
        font-weight: 500;
        color: #6c757d;
    }
    
    .info-item dd {
        color: #495057;
        margin-bottom: 1rem;
    }
    
    .delete-form form {
        margin: 0;
    }
    
    .delete-form button {
        border: none;
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
        background-color: #dc3545;
        color: white;
        transition: opacity 0.2s;
    }
    
    .delete-form button:hover {
        opacity: 0.9;
    }
</style>
{% endblock %}