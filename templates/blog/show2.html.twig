{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        /* Styles globaux */
        body {
            background-color: #f5f7fa;
        }

        .container {
            max-width: 1200px;
            padding: 0 20px;
        }

        /* En-tÃªte du blog */
        .blog-header {
            background: linear-gradient(135deg, #24c5eb, #2575fc);
            padding: 120px 0 80px;
            margin-bottom: 60px;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .blog-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="rgba(255,255,255,0.1)" fill-opacity="1" d="M0,96L48,112C96,128,192,160,288,186.7C384,213,480,235,576,213.3C672,192,768,128,864,128C960,128,1056,192,1152,208C1248,224,1344,192,1392,176L1440,160L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>');
            background-position: bottom;
            background-repeat: no-repeat;
            background-size: cover;
            opacity: 0.4;
            z-index: 1;
        }

        .blog-header .container {
            position: relative;
            z-index: 2;
        }

        .blog-title {
            font-size: 3.5rem;
            font-weight: 800;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            margin-bottom: 30px;
            letter-spacing: -1px;
        }

        .blog-meta {
            background: rgba(255, 255, 255, 0.15);
            padding: 15px 30px;
            border-radius: 50px;
            backdrop-filter: blur(10px);
            display: inline-flex;
            align-items: center;
            gap: 25px;
            font-size: 0.95rem;
        }

        .blog-meta span {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* Image du blog */
        .blog-image-container {
            margin: -100px auto 60px;
            max-width: 900px;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            background: white;
            padding: 15px;
            transform: translateY(0);
            transition: transform 0.5s ease, box-shadow 0.5s ease;
        }

        .blog-image-container:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        .blog-image {
            width: 100%;
            height: auto;
            border-radius: 12px;
            transition: transform 0.5s ease;
        }

        /* Contenu du blog */
        .blog-content {
            font-size: 1.15rem;
            line-height: 1.9;
            color: #2d3436;
            margin-bottom: 50px;
            padding: 40px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        }

        /* Section des likes */
        .actions {
            display: flex;
            gap: 20px;
            margin-bottom: 40px;
        }

        .btn-like {
            padding: 12px 30px;
            border-radius: 50px;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            font-weight: 600;
            font-size: 1.1rem;
            letter-spacing: 0.5px;
        }

        .btn-like:hover {
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 10px 20px rgba(220, 53, 69, 0.2);
        }

        .btn-like.btn-danger {
            background: linear-gradient(45deg, #ff6b6b, #ee5253);
            border: none;
        }

        .btn-like.btn-outline-danger:hover {
            background: linear-gradient(45deg, #ff6b6b, #ee5253);
            border: none;
        }

        .likes-count {
            margin-left: 10px;
            font-weight: 700;
        }

        /* Formulaire de commentaire */
        .comment-form {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            margin-bottom: 40px;
            transition: transform 0.4s ease;
        }

        .comment-form:hover {
            transform: translateY(-5px);
        }

        .comment-form h4 {
            color: #2d3436;
            font-weight: 700;
            margin-bottom: 30px;
            font-size: 1.5rem;
        }

        .comment-form .form-control {
            border: 2px solid #e9ecef;
            padding: 15px;
            border-radius: 12px;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

        .comment-form .form-control:focus {
            border-color: #24c5eb;
            box-shadow: 0 0 0 0.25rem rgba(37, 117, 252, 0.15);
        }

        .comment-form .btn-primary {
            padding: 15px 35px;
            border-radius: 50px;
            background: linear-gradient(45deg, #24c5eb, #2575fc);
            border: none;
            font-weight: 600;
            font-size: 1.1rem;
            letter-spacing: 0.5px;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .comment-form .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(37, 117, 252, 0.2);
        }

        /* Section des commentaires */
        .comments-section {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        }

        .comments-section h4 {
            color: #2d3436;
            font-weight: 700;
            margin-bottom: 30px;
            font-size: 1.5rem;
        }

        .comment {
            background: #f8f9fa;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 25px;
            transition: all 0.4s ease;
        }

        .comment:hover {
            transform: translateY(-5px) scale(1.01);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
        }

        .comment .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 15px;
        }

        .comment .user-avatar {
            width: 45px;
            height: 45px;
            background: linear-gradient(45deg, #24c5eb, #2575fc);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            box-shadow: 0 4px 10px rgba(37, 117, 252, 0.2);
        }

        .comment .username {
            font-weight: 700;
            color: #2d3436;
            font-size: 1.1rem;
            margin-bottom: 3px;
        }

        .comment .timestamp {
            color: #636e72;
            font-size: 0.9rem;
        }

        .comment .content {
            color: #2d3436;
            line-height: 1.7;
            font-size: 1.05rem;
        }

        /* Bouton de retour */
        .action-buttons {
            position: fixed;
            bottom: 40px;
            right: 40px;
            z-index: 1000;
        }

        .action-button {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(45deg, #24c5eb, #24c5eb);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 20px rgba(37, 117, 252, 0.2);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            font-size: 1.2rem;
             position: absolute;
    left: 20px; 
        }

        .action-button:hover {
            transform: scale(1.1) rotate(-10deg);
            color: white;
            text-decoration: none;
            box-shadow: 0 15px 25px rgba(37, 117, 252, 0.3);
        }

        /* Messages flash */
        .flash-messages {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1050;
            min-width: 300px;
        }

        .alert {
            border-radius: 15px;
            padding: 20px 25px;
            margin-bottom: 15px;
            border: none;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            animation: slideInRight 0.5s ease forwards;
        }

        .alert-success {
            background: linear-gradient(45deg, #00b894, #00cec9);
            color: white;
        }

        .alert-danger {
            background: linear-gradient(45deg, #ff7675, #d63031);
            color: white;
        }

        .alert-info {
            background: linear-gradient(45deg, #24c5eb, #2575fc);
            color: white;
        }

        .btn-close {
            filter: brightness(0) invert(1);
            opacity: 0.8;
        }

        @keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        /* Animations */
        .animate__animated {
            animation-duration: 1s;
        }

        .animate__fadeInDown {
            animation-duration: 1.2s;
        }

        .animate__fadeInUp {
            animation-duration: 1.2s;
            animation-delay: 0.2s;
        }

        .animate__fadeInRight {
            animation-duration: 0.8s;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Messages Flash -->
    <div class="flash-messages">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show animate__animated animate__fadeInRight" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    <!-- En-tÃªte du blog -->
    <div class="blog-header">
        <div class="container">
            <div class="row">
                <div class="col-md-8 mx-auto text-center">
                    <h1 class="blog-title animate__animated animate__fadeInDown">
                        {{ blog.title }}
                    </h1>
                    <div class="blog-meta animate__animated animate__fadeInUp">
                        <span><i class="far fa-calendar-alt"></i> PubliÃ© le {{ blog.createdAt|date('d/m/Y') }}</span>
                        {% if blog.updatedAt %}
                            <span><i class="fas fa-edit"></i> Mis Ã  jour le {{ blog.updatedAt|date('d/m/Y') }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Image du blog -->
        {% if blog.blogImage %}
            <div class="blog-image-container animate__animated animate__fadeInUp">
                <img src="{{ asset('uploads/images/' ~ blog.blogImage) }}" class="blog-image" alt="Image principale du blog">
            </div>
        {% endif %}

        <div class="row">
            <div class="col-md-8 mx-auto">
                <!-- Contenu du blog -->
                <div class="blog-content animate__animated animate__fadeInUp">
                    {{ blog.content|raw }}
                </div>

                <!-- Like et Commentaires -->
              <div class="actions animate__animated animate__fadeInUp">
    <form action="{{ path('app_blog_toggle_like', {'id': blog.id}) }}" method="POST" class="d-inline">
        {# Ajout du token CSRF pour sÃ©curiser la requÃªte #}
        <input type="hidden" name="_token" value="{{ csrf_token('blog_toggle_like_' ~ blog.id) }}">
        
        {# Bouton de like/dislike #}
        <button 
            type="submit" 
            class="btn btn-like {% if blog.isLikedByUser(app.session.get('id')) %}btn-danger{% else %}btn-outline-danger{% endif %}">
            <i class="fas fa-heart"></i>
            <span class="likes-count">{{ blog.getLikesCount() }}</span>
        </button>
    </form>
</div>


                <div class="comment-form animate__animated animate__fadeInUp">
                    <h4>Ajouter un commentaire</h4>
                    <form action="{{ path('app_blog_comment', {'id': blog.id}) }}" method="POST">
                        <div class="form-group mb-4">
                            <input type="text" name="username" class="form-control" required 
                                   placeholder="Votre nom">
                        </div>
                        <div class="form-group mb-4">
                            <textarea name="content" class="form-control" rows="4" required 
                                      placeholder="Partagez vos pensÃ©es..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane me-2"></i>Commenter
                        </button>
                    </form>
                </div>

                <div class="comments-section animate__animated animate__fadeInUp">
                    <h4>Commentaires ({{ blog.comments|length }})</h4>
                    {% for comment in blog.comments|sort((a, b) => b.createdAt <=> a.createdAt) %}
                        <div class="comment">
                            <div class="user-info">
                                <div class="user-avatar">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div>
                                    <div class="username">{{ comment.username }}</div>
                                    <div class="timestamp">
                                        <i class="far fa-clock me-1"></i>
                                        {{ comment.createdAt|date('d/m/Y H:i') }}
                                    </div>
                                </div>
                            </div>
                            <div class="content">
                                {{ comment.content }}
                            </div>
                        </div>
                    {% else %}
                        <p class="text-muted text-center">
                            <i class="far fa-comments me-2"></i>
                            Aucun commentaire pour le moment.
                        </p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <!-- Boutons d'action flottants -->
    <div class="action-buttons animate__animated animate__fadeInRight">
        <a href="{{ path('app_blog_list_user') }}" class="action-button" title="Retour Ã  la liste">
            <i class="fas fa-arrow-right"></i>
        </a>
    </div>
{% endblock %}
