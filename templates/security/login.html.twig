{% extends 'base3.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
                </div>
                <div class="card-body">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <div class="form-group">
                            <label for="username">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" required autofocus>
                        </div>

                        <div class="form-group mt-3">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="checkbox mb-3 mt-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Se souvenir de moi
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-lg btn-primary" type="submit">
                                Se connecter
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">Pas encore de compte ? <a href="{{ path('app_register') }}">S'inscrire</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
