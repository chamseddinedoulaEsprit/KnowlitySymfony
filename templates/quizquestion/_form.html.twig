{{ form_start(form) }}
    <div class="form-group">
     <div class="card-body">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}

            {% for error in form.vars.errors %}
                <div class="alert alert-danger">{{ error.message }}</div>
            {% endfor %}
        {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.type, {'attr': {'class': 'form-control form-control-border'}}) }}
        {{ form_errors(form.type, {'attr': {'class': 'text-danger'}}) }} {# Affiche les erreurs de validation #}
    </div>

    <div class="form-group">
        {{ form_label(form.points, 'Points', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.points, {'attr': {'class': 'form-control form-control-border border-width-2'}}) }}
        {{ form_errors(form.points, {'attr': {'class': 'text-danger'}}) }} {# Affiche les erreurs de validation #}
    </div>

    <div class="form-group">
        {{ form_label(form.texte, 'Texte', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.texte, {'attr': {'class': 'form-control rounded-0'}}) }}
        {{ form_errors(form.texte, {'attr': {'class': 'text-danger'}}) }} {# Affiche les erreurs de validation #}
    </div>

    <div class="form-group">
        {{ form_label(form.ordre, 'Ordre', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.ordre, {'attr': {'class': 'form-control form-control-border'}}) }}
        {{ form_errors(form.ordre, {'attr': {'class': 'text-danger'}}) }} {# Affiche les erreurs de validation #}
    </div>

    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}