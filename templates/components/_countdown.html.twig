{% block countdown_styles %}
<style>
    .countdown-wrapper {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        border-radius: 16px;
        padding: 2rem;
        color: white;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .countdown-title {
        text-align: center;
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 2rem;
        text-transform: uppercase;
    }

    .countdown-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
    }

    .countdown-item {
        position: relative;
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .countdown-circle {
        position: absolute;
        inset: 0;
        border-radius: 50%;
        border: 3px solid rgba(255,255,255,0.3);
        background: rgba(255,255,255,0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        animation: pulse 2s infinite;
    }

    .countdown-number {
        font-size: 2rem;
        font-weight: bold;
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .countdown-label {
        font-size: 0.8rem;
        text-transform: uppercase;
        opacity: 0.8;
    }

    @keyframes pulse {
        0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(255,255,255,0.4); }
        50% { transform: scale(1.05); box-shadow: 0 0 20px rgba(255,255,255,0.2); }
        100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(255,255,255,0.4); }
    }

    .countdown-expired {
        grid-column: span 4;
        background: rgba(220, 53, 69, 0.9);
        border-radius: 12px;
        padding: 2rem;
        text-align: center;
        animation: warning 1.5s infinite;
    }

    @keyframes warning {
        0% { transform: scale(1); }
        50% { transform: scale(1.02); }
        100% { transform: scale(1); }
    }

    @media (max-width: 768px) {
        .countdown-grid {
            gap: 0.5rem;
        }
        .countdown-number {
            font-size: 1.5rem;
        }
    }
</style>
{% endblock %}

<div class="countdown-wrapper">
    <h2 class="countdown-title">
        <i class="fas fa-hourglass-half me-2"></i>
        Temps Restant
    </h2>
    <div class="countdown-grid" id="countdown-container">
        <div class="countdown-item">
            <div class="countdown-circle">
                <div class="countdown-number" id="days">00</div>
                <div class="countdown-label">Jours</div>
            </div>
        </div>
        <div class="countdown-item">
            <div class="countdown-circle">
                <div class="countdown-number" id="hours">00</div>
                <div class="countdown-label">Heures</div>
            </div>
        </div>
        <div class="countdown-item">
            <div class="countdown-circle">
                <div class="countdown-number" id="minutes">00</div>
                <div class="countdown-label">Minutes</div>
            </div>
        </div>
        <div class="countdown-item">
            <div class="countdown-circle">
                <div class="countdown-number" id="seconds">00</div>
                <div class="countdown-label">Secondes</div>
            </div>
        </div>
    </div>
</div>

{% block countdown_script %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const deadline = new Date("{{ deadline|date('Y-m-d H:i:s') }}").getTime();
    
    function updateCountdown() {
        const now = new Date().getTime();
        const distance = deadline - now;
        
        if (distance < 0) {
            document.getElementById('countdown-container').innerHTML = `
                <div class="countdown-expired">
                    <div class="countdown-number">TERMINÉ</div>
                    <div class="countdown-label">Temps écoulé</div>
                </div>
            `;
            return;
        }
        
        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);
        
        document.getElementById('days').textContent = String(days).padStart(2, '0');
        document.getElementById('hours').textContent = String(hours).padStart(2, '0');
        document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
        document.getElementById('seconds').textContent = String(seconds).padStart(2, '0');
    }
    
    updateCountdown();
    setInterval(updateCountdown, 1000);
});
</script>
{% endblock %}
