{% extends 'base.html.twig' %}

{% block title %}Modifier la Réponse{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('assets/css/editreponse.css') }}">

      
{% endblock %}

{% block body %}
    <div class="container1">
        <div class="card">
            <h2 class="card-title text-center">Modifier la Réponse</h2>
            <p class="motivational-text">Chaque modification compte ! Vous êtes sur la bonne voie pour améliorer votre contenu.</p>

            {{ include('reponse/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

            <div class="text-center mt-4">
                <a href="{{ path('app_reponse_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left icon-btn"></i>Retour à la liste
                </a>
            </div>

            {{ include('reponse/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}