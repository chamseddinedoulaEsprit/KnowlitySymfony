{% extends 'base.html.twig' %}

{% block title %}Liste des Réponses{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('assets/css/indexreponse.css') }}">
{% endblock %}

{% block body %}
    <div class="container1">
        <h2 class="text-center mb-4">Liste des Réponses</h2>

        <div class="motivational-text">
            <p>Votre engagement fait toute la différence ! Continuez à explorer et à répondre aux questions.</p>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Text</th>
                    <th>Correcte</th>
                    <th>Étudiant</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for reponse in reponses %}
                    <tr>
                        <td>{{ reponse.id }}</td>
                        <td>{{ reponse.text }}</td>
                        <td>{{ reponse.isCorrect ? 'Oui' : 'Non' }}</td>
                        <td>{{ reponse.userId }}</td>
                        <td class="actions">
                            <a href="{{ path('app_reponse_show', {'id': reponse.id}) }}" class="btn btn-primary">
                                <i class="fas fa-eye icon-btn"></i>Afficher
                            </a>
                            <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-edit icon-btn"></i>Modifier
                            </a>
                            <a href="{{ path('app_reponse_user', {'evaluationId': reponse.question.evaluation.id, 'userId': reponse.userId}) }}" class="btn btn-info">
                                <i class="fas fa-user icon-btn"></i> Réponses de l'étudiant
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucune réponse trouvée.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="card-footer">
            <a href="{{ path('app_reponse_user', {'evaluationId': reponse.question.evaluation.id, 'userId': reponse.userId}) }}" class="btn btn-info">
    <i class="fas fa-user icon-btn"></i> Réponses de l'étudiant
</a>

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}