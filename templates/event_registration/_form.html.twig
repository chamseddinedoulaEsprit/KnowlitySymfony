{{ form_start(form, { 'attr': { 'class': 'contact-form row', 'enctype': 'multipart/form-data', 'id': 'regForm' } }) }}
<body class="event_registration">
    <div class="container mt-5">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-8">
                <h1 id="register">Reservation Form</h1>
                <div class="all-steps" id="all-steps"> 
                    <span class="step"><i class="fa fa-user"></i></span> 
                    <span class="step"><i class="fa fa-map-marker"></i></span>
                    <span class="step"><i class="fa fa-chair"></i></span>
                    <span class="step"><i class="fa fa-wheelchair"></i></span>
                    <span class="step"><i class="fa fa-file-contract"></i></span>
                </div>

                <!-- Step 1: Reservation for who? -->
                <div class="tab">
                    <h6>Reservation for who?</h6>
                    <p>
                        {{ form_widget(form.name, {
                            'attr': {
                                'class': 'input-text js-input',
                                'placeholder': 'Enter Name'
                            }
                        }) }}
                        <div class="text-danger">{{ form_errors(form.name) }}</div>
                    </p>
                </div>

                <!-- Step 2: Where are you coming from? -->
                <div class="tab">
                    <h6>Where are you coming from?</h6>
                    <p>
                        {{ form_widget(form.coming_from, {
                            'attr': {
                                'class': 'input-text js-input',
                                'placeholder': 'City'
                            }
                        }) }}
                        <div class="text-danger">{{ form_errors(form.coming_from) }}</div>
                    </p>
                </div>

                <!-- Step 3: How many places do you want to reserve? -->
                <div class="tab">
                    <h6>How many places do you want to reserve?</h6>
                    <p>
                        {{ form_widget(form.places_reserved, {
                            'attr': {
                                'class': 'input-text js-input',
                                'placeholder': 'Number of places (between 1->5)'
                            }
                        }) }}
                        <div class="text-danger">{{ form_errors(form.places_reserved) }}</div>
                    </p>
                </div>

                <!-- Step 4: Do you require a parking spot for special needs? -->
                <div class="tab">
    <h6>Do you require a parking spot for special needs?</h6>
    <div class="form-check form-check-inline">
        {{ form_widget(form.disabled_parking[0], {
            'attr': {
                'class': 'form-check-input'
            }
        }) }}
        <label class="form-check-label" for="{{ form.disabled_parking[0].vars.id }}">
            Yes
        </label>
    </div>
    <div class="form-check form-check-inline">
        {{ form_widget(form.disabled_parking[1], {
            'attr': {
                'class': 'form-check-input'
            }
        }) }}
        <label class="form-check-label" for="{{ form.disabled_parking[1].vars.id }}">
            No
        </label>
    </div>
    <div class="text-danger">{{ form_errors(form.disabled_parking) }}</div>
</div>

                <!-- Step 5: Terms and conditions -->
                <div class="tab">
                    <h6>Terms and conditions</h6>
                    <p>By registering for this educational event, participants agree to abide by the event guidelines and respect all attendees, speakers, and organizers. The organizers reserve the right to make changes to the schedule and deny entry or participation for any misconduct. Any personal data collected will be used solely for event-related purposes.</p>
                    <div class="form-check">
                        {{ form_widget(form.agreeTerms, {
                            'attr': {
                                'class': 'form-check-input',
                                'id': 'agreeTerms'
                            }
                        }) }}
                        <label class="form-check-label" for="agreeTerms">
                            I agree to the terms and conditions
                        </label>
                    </div>
                    <div class="text-danger">{{ form_errors(form.agreeTerms) }}</div>
                </div>

                <!-- Hidden submit button -->
                <button type="submit" id="finalSubmit" style="display: none;"></button>

                <!-- Navigation buttons -->
                <div style="overflow:auto;" id="nextprevious">
                    <div style="float:right;">
                        <button type="button" id="prevBtn" onclick="nextPrev(-1)">
                            <i class="fa fa-angle-double-left"></i>
                        </button> 
                        <button type="button" id="nextBtn" onclick="nextPrev(1)">
                            <i class="fa fa-angle-double-right"></i>
                        </button>
                    </div>
                </div>

                <!-- Success message -->
                <div class="thanks-message text-center" id="text-message">
                    <img src="https://i.imgur.com/O18mJ1K.png" width="100" class="mb-4">
                    <h3>Thank you for your feedback!</h3>
                    <span>Thanks for your valuable information. It helps us to improve our services!</span>
                </div>
            </div>
        </div>
    </div>
</body>
{{ form_end(form) }}